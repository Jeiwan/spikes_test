h1 Накладные

= link_to "Приходовать новую накладную", "#", class: "btn btn-primary"
= simple_form_for Admin::Invoice.new do |f|
  = f.error_notification
  h3 Товары
  #products
    = f.simple_fields_for :invoice_positions, @invoice.invoice_positions  do |invoice_position|
      = render 'invoice_position_fields', f: invoice_position
    .links
      = link_to_add_association 'Добавить позицию', f, :invoice_positions
  - if params[:from_request]
    = f.hidden_field :request_id, value: params[:from_request]
  = f.submit 'Приходовать', class: 'btn btn-success'

table.all-invoices.table
  thead
    tr
      th Дата
      th Наименование
      th Количество
      th Цена
  tbody
    - @invoices.each do |invoice|
      - invoice.invoice_positions.each_with_index do |position, index|
          tr
            td = index == 0 ? invoice.created_at.strftime("%R %D") : ''
            td = position.article.name
            td = position.quantity
            td = position.price

= paginate @invoices
